.Movie
  cursor pointer

.modal
  background-color #fafafa
  border-radius 2px
  bottom 10%
  display none
  left 0
  margin auto
  max-height 70%
  overflow-y auto
  padding 0
  position fixed
  top 10%
  right 0
  width 55%
  will-change top, opacity
  &.modal-fixed-footer
    padding 0
    height 70%
  &.modal-fixed-footer .modal-content
    position absolute
    height calc(100% - 56px)
    max-height 100%
    width 100%
    overflow-y auto
  &.modal-fixed-footer .modal-footer
    border-top 1px solid rgba(0, 0, 0, 0.1)
    position absolute
    bottom 0
  &.modal-fixed-footer .modal-content
    position absolute
    height calc(100% - 56px)
    max-height 100%
    width 100%
    overflow-y auto
  &.modal-fixed-footer .modal-footer
    border-top 1px solid rgba(0, 0, 0, 0.1)
    position absolute
    bottom 0
  &.bottom-sheet
    top auto
    bottom -100%
    margin 0
    width 100%
    max-height 45%
    border-radius 0
    will-change bottom, opacity
  h1, h2, h3, h4
    margin-top 0
  .modal-content
    background-position center
    background-size cover
    background-repeat no-repeat
    padding 24px
    .modal-cont
      background rgba(white, .8)
      padding 5px
      h2
        font-family 'Dosis'
      p
        font-family 'Open Sans'
  .modal-close
    cursor pointer
  .modal-footer
    background-color #fafafa
    border-radius 0 0 2px 2px
    padding 4px 6px
    height 56px
    width 100%
  .modal-footer .btn,
  .modal-footer .btn-large,
  .modal-footer .btn-flat
    background-color red
    border-radius 8px
    color #FFF
    float right
    font-family Arial, "Helvetica Neue", Helvetica, sans-serif
    font-weight bold
    height 30px
    margin 8px
    padding 5px 25px
    text-align center
    text-decoration none
    width 150px

.lean-overlay
  position fixed
  z-index 999
  top -100px
  left 0
  bottom 0
  right 0
  height 125%
  width 100%
  background #000
  display none
  will-change opacity

.Movie-body
  overflow-y scroll

.Movie-img
  min-height 300px
  max-height 300px
  margin 0 auto
  min-width 100%
  width auto

.dropdown-content
  background-color #fff
  display none
  list-style none
  margin 0
  max-height 650px
  min-width 110px
  opacity 0
  overflow-y auto
  padding 0
  position absolute
  will-change width, height
  z-index 999

.dropdown-content li
  clear both
  color rgba(0, 0, 0, 0.87)
  cursor pointer
  line-height 1.5rem
  min-height 50px
  text-align left
  text-transform none
  width 100%

.dropdown-content li:hover
.dropdown-content li.active
.dropdown-content li.selected
  background-color #eee

.dropdown-content li.active.selected
  background-color #e1e1e1
  font-weight bold

.dropdown-content li.divider
  height 1px
  min-height 0

.dropdown-content li > a
.dropdown-content li > span
  color #26a69a
  color #f16d4e
  display block
  font-size 16px
  line-height 22px
  padding 14px 16px

.dropdown-content li > span > label
  height 18px
  left 3px
  top 1px

.dropdown-content li > a > i
  height inherit
  line-height inherit


@media screen and (max-width: 500px)
  .modal
    width 70%

@media screen and (min-width: 1024px)
  .modal
    width 700px
